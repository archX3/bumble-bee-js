{
  "globals": {
    "Bee" : true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "semi": ["error", "always"],
//    "quotes": ["error", "double"],
    "eqeqeq": "warn",
    "handle-callback-err": "warn",
    "require-jsdoc": "warn",
    "no-array-constructor": "error",
    "no-global-assign": "error",
    "new-cap": "error",
    "no-loop-func":"warn",
//    "valid-jsdoc": [1],
    "no-confusing-arrow": "warn"
  }
}